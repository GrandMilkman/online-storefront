    <changeSet id="1.1.0" author="mikita">
        <!-- ValidCheckSum>8:c8e6ebf8f232a1378e322a722c882f53</validCheckSum-->
        <createTable tableName="user">
            <column name="user_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="user_pk"/>
            </column>
            <column name="user_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="user_password" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createIndex tableName="user" indexName="user_name_uk" unique="true">
            <column name="user_name" />
        </createIndex>
        
        <createTable tableName="role">
            <column name="role_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="role_pk"/>
            </column>
            <column name="role_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet id="1.2.0" author="mikita">
        <!--validCheckSum>8:d1d459804d9f9f8fc78945757300c15b</validCheckSum-->
        <createTable tableName="user_role">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="role_id" type="bigint">
                <constraints nullable = "false"/>
            </column>
        </createTable>
        
        <addPrimaryKey tableName="user_role" columnNames="user_id, role_id"/>
        
        <addForeignKeyConstraint constraintName="user_role_user_fk"
         referencedTableName="user" referencedColumnNames="user_id"
         baseColumnNames="user_id" baseTableName="user_role"/>
         
        <addForeignKeyConstraint constraintName="user_role_role_fk"
         referencedTableName="role" referencedColumnNames="role_id"
         baseColumnNames="role_id" baseTableName="user_role"/>
         
    </changeSet>
    
    <changeSet id="1.3.0" author="mikita">
        <createTable tableName="ware">
            <column name="ware_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="ware_pk"/>
            </column>
            <column name="ware_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="ware_price" type="double">
                <constraints nullable="false"/>
            </column>
            <column name="ware_groupid" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="group">
            <column name="group_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="group_pk"/>
            </column>
            <column name="group_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
    </changeSet>
    
