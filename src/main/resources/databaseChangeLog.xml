    <changeSet id="1.5.0" author="mikita">
        <createTable tableName="cart">
            <column name="cart_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="cart_pk" />
            </column>
        </createTable>
        
        <createTable tableName="cart_user">
            <column name="cart_id" type="bigint">
